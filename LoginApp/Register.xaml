<Window x:Class="LoginApp.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginApp"
        mc:Ignorable="d"
Title="Register" Height="400" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Register" FontSize="20" Margin="0 0 0 20"/>
            <Label Content="Username" FontSize="14" />
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0 5"/>
            <Label Content="Password" FontSize="14" />
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0 5"/>
            <Label Content="Confirm Password" FontSize="14" />
            <PasswordBox x:Name="ConfirmPasswordBox" Width="200" Margin="0 5"/>
            <Button Content="Register" Width="100" Margin="0 10" Click="RegisterButton_Click"/>
            <TextBlock HorizontalAlignment="Center">
            <Hyperlink Click="BackToLoginLink_Click">Back to login</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>

</Window>
